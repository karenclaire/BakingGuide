<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_ingredients_height"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    tools:context="com.example.android.bakingguide.fragments.IngredientsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredients_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="casual"
            android:paddingStart="@dimen/ingredients_instructions_padding"
            android:paddingLeft="@dimen/ingredients_instructions_padding"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/ingredients_name_textSize"
            android:textStyle="bold"
            tools:text="1" />
        <TextView
            android:id="@+id/ingredients_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="casual"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/ingredients_name_textSize"
            android:textStyle="bold"
            tools:text="Cup" />
        <TextView
            android:id="@+id/ingredients_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:fontFamily="casual"

            android:textColor="@color/colorAccent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/ingredients_name_textSize"
            android:textStyle="bold"
            tools:text="Nutella" />

        <!--<TextView
            android:id="@+id/measure_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:fontFamily="casual"
            android:paddingStart="@dimen/ingredients_instructions_padding"
            android:paddingLeft="@dimen/ingredients_instructions_padding"
            android:textSize="@dimen/ingredients_measure_textSize"
            tools:text="@string/ingredient_measure" />-->
    </LinearLayout>

</android.support.v7.widget.CardView>
